<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailCountryInfoActivity">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailCountryInfoActivity">




    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryNameValue" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp"
            android:textStyle="bold|italic"
            android:textAlignment="center" android:textSize="36sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/capitalName"
            app:layout_constraintTop_toBottomOf="@+id/countryNameValue" android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textStyle="bold"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/countryNameValue"
            android:layout_marginTop="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/capitalNameValue" app:layout_constraintStart_toEndOf="@+id/capitalName"
            android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/capitalName"/>
    <TextView
            android:text="@string/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regionName" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/capitalName"
            app:layout_constraintStart_toStartOf="@+id/capitalName"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regionNameValue" app:layout_constraintStart_toEndOf="@+id/regionName"
            android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/regionName"/>
    <TextView
            android:text="@string/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/populationField" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/regionName" app:layout_constraintStart_toStartOf="@+id/regionName"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/populationFieldValue" app:layout_constraintStart_toEndOf="@+id/populationField"
            android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/populationField"/>
    <TextView
            android:text="@string/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/areaField" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/populationField"
            app:layout_constraintStart_toStartOf="@+id/populationField"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/areaFieldValue" app:layout_constraintStart_toEndOf="@+id/areaField"
            android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/areaField"/>
    <TextView
            android:text="@string/coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coordinatesField"
            app:layout_constraintTop_toBottomOf="@+id/divider3" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="176dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="177dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coordinatesFieldValue" app:layout_constraintStart_toStartOf="@+id/coordinatesField"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/coordinatesField"
            app:layout_constraintEnd_toEndOf="@+id/coordinatesField" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="180dp" app:layout_constraintTop_toBottomOf="@+id/areaField"/>
</androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>